{% extends 'layouts/page.njk' %}
{% from "customCard/macro.njk" import appCustomCard %}
{% set language = currentLang %}
{% block content %}
  {% from "govuk/components/notification-banner/macro.njk" import govukNotificationBanner %}
   {% if userPermissions.confirmBankDetails and bankApiData.confirmed === false %}
      <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">

          {% set html %}
             <p class="govuk-notification-banner__heading">
              {{ translations['please-confirm-'] | safe }}
              <a class="govuk-link" href="/bank-details/confirm?lang={{ currentLang }}">
                {{ translations['please-confirm-link'] }}
              </a>
            </p>
          {% endset %}

        {{ govukNotificationBanner({
          titleText: translations['important'],
          html: html
        }) }}
        <br/>
        </div>
      </div>
    {% endif %}
  {{ appHeading({
   text: translations['local-authority'],
    caption: authedUser.organisationName

  }) }}

      <div class="govuk-grid-row">
        {{ appCustomCard({
          title: translations['payment-documen'],
         link: "/payment-documents?lang=" + currentLang,
         body: translations['you-can-view-an'],
         list: [
           translations['estimated-grant'],
           translations['remittance-advi']
          ]
        }) }}
        {{ appCustomCard({
          title: translations['bank-details'],
          link: "/bank-details?lang=" + currentLang,
          body: translations['you-can:'],
          list: [
            translations['view-bank-detai']
          ]
        }) }}
        </div>
        <div class="govuk-grid-row">
        {{ appCustomCard({
          title: translations['get-help'],
          link: "/get-help?lang=" + currentLang,
          body: translations['you-can-view-ou'],
          list: [
            translations['read-local-auth'],
            translations['raise-a-support']
          ]
        }) }}
      </div>


{% endblock %}
