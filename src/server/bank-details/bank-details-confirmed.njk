{% extends 'layouts/page.njk' %}
{% from "govuk/components/panel/macro.njk" import govukPanel %}

{% block content %}
<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    {{ govukPanel({
      titleText: "Bank details confirmed"
    }) }}

    <p class="govuk-body">Your local authority's bank details have been confirmed.</p>

    {% if data['confirm-bank-details-referrer'] == 'bank-details' %}
      <a href='/laps/bank-details' class='govuk-link'>Go back to Bank details</a>
    {% elif data['confirm-bank-details-referrer'] == 'home-page' %}
      <a href='/laps/home-page' class='govuk-link'>Go back to LAPs home</a>
    {% else %}
      <a href='/laps/home-page' class='govuk-link'>Go back to LAPs home</a>
    {% endif %}

  </div>
</div>
{% endblock %}
